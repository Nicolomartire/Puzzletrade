generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User1 {
  id        Int      @id @default(autoincrement())
  firstname String
  lastname  String
  email     String   @unique
  city      String
  pusselref Puzzle1[]
}

model Puzzle1 {
  id         Int    @id @default(autoincrement())
  namnpuzzle String
  descripton String?
  pieces     Int
  condition  Int?
  picture    String?
  author     User1   @relation(fields: [authorId], references: [id])
  authorId   Int
}